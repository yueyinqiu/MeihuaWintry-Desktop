<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:entities="using:MeihuaWintryDesktop.Entities"
		xmlns:controls="using:MeihuaWintryDesktop.Controls"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="MeihuaWintryDesktop.MainWindow"
        Icon="/Assets/taiji.png"
        Title="MeihuaWintry">
	<Grid RowDefinitions="Auto, *">
		<Menu Grid.Row="0">
			<MenuItem Header="占例(_F)">
				<MenuItem Name="menuItemNewCase"
						  Header="新建(_N)" HotKey="Ctrl+N"/>
				<Separator/>
				<MenuItem Name="menuItemOpenCase"
						  Header="打开(_O)" HotKey="Ctrl+O"/>
				<MenuItem Name="menuItemSaveCase"
						  Header="保存(_S)" HotKey="Ctrl+S" IsEnabled="False"/>
				<MenuItem Name="menuItemSaveCaseAs"
						  Header="另存为(_A)" HotKey="Ctrl+Shift+S" IsEnabled="False"/>
				<Separator/>
				<MenuItem Name="menuItemExitProgram" 
						  Header="退出(_X)"/>
			</MenuItem>
		</Menu>

		<controls:CaseDisplayControl Name="caseDisplayControl" 
									 Grid.Row="1"></controls:CaseDisplayControl>
	</Grid>
</Window>
