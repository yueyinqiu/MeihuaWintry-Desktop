<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:entities="using:MeihuaWintryDesktop.Entities"
		xmlns:controls="using:MeihuaWintryDesktop.Controls"
        mc:Ignorable="d"
		Width="400" Height="300"
        x:Class="MeihuaWintryDesktop.MessageWindow"
        Icon="/Assets/taiji.png">
	<Grid RowDefinitions="*, Auto" ColumnDefinitions="*, *" Margin="15">
		<TextBox Name="textBoxMessage"
				 Grid.ColumnSpan="2"
				 VerticalAlignment="Stretch" HorizontalAlignment="Stretch"
				 IsReadOnly="True"
				 AcceptsReturn="True" TextWrapping="WrapWithOverflow"/>
		<Button Name="buttonYes"
				Grid.Row="1"
				VerticalAlignment="Center" HorizontalAlignment="Stretch" />
		<Button Name="buttonNo"
				Grid.Row="1" Grid.Column="1"
				VerticalAlignment="Center" HorizontalAlignment="Stretch" />
	</Grid>
</Window>
